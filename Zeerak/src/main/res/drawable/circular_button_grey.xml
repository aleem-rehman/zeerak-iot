<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"  android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp">
            <solid android:color="@color/colorWhite" />
            <gradient android:centerColor="@color/colorWhite" android:endColor="@color/colorDarkGrey" android:gradientRadius="50%" android:startColor="@color/colorWhite" android:type="radial" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="3dp"
                android:color="@color/colorDarkGrey" />
        </shape>
    </item>
</layer-list>


