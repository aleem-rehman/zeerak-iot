<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/circular_button_grey" android:state_checked="false" android:state_enabled="false" />

    <item android:state_checked="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:bottom="3dp" android:left="3dp" android:right="3dp" android:shape="oval" android:top="3dp">
                    <solid android:color="@color/colorWhite" />
                    <gradient android:centerColor="@color/colorWhite" android:endColor="@color/colorLightGreen" android:gradientRadius="50%" android:startColor="@color/colorWhite" android:type="radial" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="3dp" android:color="@color/colorLightGreen" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:drawable="@drawable/circular_button_grey" android:state_checked="true" android:state_enabled="false" />

    <item android:state_checked="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:bottom="3dp" android:left="3dp" android:right="3dp" android:shape="oval" android:top="3dp">
                    <solid android:color="@color/colorWhite" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="3dp" android:color="@color/colorLightRed" />
                    <gradient android:centerColor="@color/colorWhite" android:endColor="@color/colorLightRed" android:gradientRadius="50%" android:startColor="@color/colorWhite" android:type="radial" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>


